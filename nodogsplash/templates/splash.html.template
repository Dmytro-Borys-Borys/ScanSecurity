<!doctype html>
<html lang=\"e\$s\">

<head>
    <!-- Meta etiquetas requeridas -->
    <meta charset=\"utf-8\">
    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1\">
    <!-- Bootstrap CSS -->
    <link href=\"bootstrap.min.css\" rel=\"stylesheet\">
    <title>ScanSecurityOpen</title>
    <style>
        /* Estilos generales */
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }
        
        .container {
            max-width: 400px;
            margin: 15px auto;
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
        }
        
        .lesser-container {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #EDFBFF;
            background-image: linear-gradient(to bottom, #EDFBFF, #CDEBFF);
        }

        .logo {
            display: block;
            margin: 0 auto 20px;
            max-width: 400px;
            max-height: 120px;
            height: auto;
        }
        
        h1 {
            text-align: center;
            font-size: 24px;
            margin: 5px;
            text-decoration: underline;
        }
        
        h2,
        h3,
        p {
            text-align: center;
            margin: 5px;
        }
        
        h3 {
            margin: 20px;
        }
        
        label {
            font-weight: bold;
        }
        
        input[type=\"text\"],
        input[type=\"password\"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 3px;
            background-color: #fff;
            box-sizing: border-box;
            /* Agregado para incluir el padding y el borde en el ancho total */
        }
        
        button {
            background-color: #04AA6D;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            width: 100%;
        }
    </style>
    <script>
        // Funci&oacute;n para obtener el valor de un par&aacute;metro de URL por nombre
        function getURLParameter(name) {
            name = name.replace(/[[]/, '\\[').replace(/[\]]/, '\\]');
            var regex = new RegExp('[\\?&]' + name + '=([^&#]*)');
            var results = regex.exec(location.search);
            return results === null ? '' : decodeURIComponent(results[1].replace(/\+/g, ' '));
        }

        // Funci&oacute;n para rellenar los campos del formulario con los valores de los par&aacute;metros de URL y simular clic en el bot&oacute;n de env??o
        function preFillForm() {
            var username = getURLParameter('u');
            var password = getURLParameter('p');

            document.getElementById('username').value = username;
            document.getElementById('password').value = password;

            if (username !== '' && password !== '') {
                var submitButton = document.querySelector('button[type=\"submit\"]');
                if (submitButton) {
                    submitButton.click();
                }
            }
        }
    </script>
</head>

<body onload=\"preFillForm()\">
    <div class=\"container\">
        <form method=\"GET\" action=\"\$authaction\">
            <input type=\"hidden\" name=\"tok\" value=\"\$tok\">
            <input type=\"hidden\" name=\"redir\" value=\"\$redir\">
            <img class=\"logo\" src=\"images/$NDS_LOGO\" alt=\"Logo\">
            <div class=\"lesser-container\">
                <h1>$BUSINESS_NAME</h1>
                <p>$BUSINESS_ADDRESS</p>
            </div>
            <h3>Inicio de sesi&oacute;n:</h3>
            <div class=\"mb-3\">
                <label for=\"username\" class=\"form-label\"> &bull; Nombre de usuario:</label>
                <input type=\"text\" class=\"form-control\" placeholder=\"Ingresa el nombre de usuario\" name=\"username\" id=\"username\" required>
            </div>
            <div class=\"mb-3\">
                <label for=\"password\" class=\"form-label\"> &bull; Contrase&ntilde;a:</label>
                <input type=\"password\" class=\"form-control\" placeholder=\"Ingresa la contrase&ntilde;a\" name=\"password\" id=\"password\" required>
            </div>
            <div class=\"mb-3\">
                <button type=\"submit\" class=\"btn btn-primary\">Iniciar sesi&oacute;n</button>
            </div>
        </form>
    </div>
</body>

</html>
